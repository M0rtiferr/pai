let r = Math.floor(Math.Random()*(2022-1583+1)+1583);
	                                                       
	if((r % 4 == 0) && ((r % 100 =0) && (r % 400 = 0)) == false ){
		document.write('rok jest przestepny');
	}
	else{
		document.write('rok jest nieprzestepny');
